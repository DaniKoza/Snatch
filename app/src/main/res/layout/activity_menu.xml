<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_blue"
    tools:context=".MenuActivity">

    <com.example.snatch.DollarAnimationView
        android:id="@+id/animated_dollars_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="top|center_horizontal"
        android:layout_alignParentTop="true"
        android:visibility="invisible"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/layout_of_buttons"
        android:layout_centerHorizontal="true"
        android:text="SNATCH"
        android:textColor="@color/colorGreenStrong"
        android:textSize="60sp"
        android:fontFamily="sans-serif-condensed-medium"
        android:textStyle="bold"

        android:shadowColor="@color/colorBlack"
        android:shadowDx="12"
        android:shadowDy="12"
        android:shadowRadius="8"/>


    <LinearLayout
        android:id="@+id/layout_of_buttons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:padding="30dp">


        <Button
            android:id="@+id/btn_play"
            android:layout_width="160dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:text="Play"
            android:textSize="22sp"/>

        <Space
            android:layout_width="wrap_content"
            android:layout_height="30dp"/>

        <Button
            android:id="@+id/btn_best_scores"
            android:layout_width="160dp"
            android:layout_height="60dp"
            android:text="Best Scores"
            android:textSize="22sp"
            android:padding="5dp"/>

        <Space
            android:layout_width="wrap_content"
            android:layout_height="30dp"/>

        <Button
            android:id="@+id/btn_settings"
            android:layout_width="160dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:text="settings"
            android:textSize="22sp" />

    </LinearLayout>




</RelativeLayout>